redmine  설치

docker pull sameersbn/redmine:latest

docker run --name=postgresql-redmine -d --env='DB_NAME=redmine_production' --env='DB_USER=redmine' --env='DB_PASS=password' --volume=/srv/docker/redmine/postgresql:/var/lib/postgresql sameersbn/postgresql:9.6-4

docker run --name=redmine -d --link=postgresql-redmine:postgresql --publish=10083:80 --env='REDMINE_PORT=10083' --volume=/srv/docker/redmine/redmine:/home/redmine/data --volume=/srv/docker/redmine/redmine-logs:/var/log/redmine/ sameersbn/redmine:4.2.1-1
