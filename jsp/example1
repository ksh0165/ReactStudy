<script>
function display(form){
	var id = form.UserId.value;
	var pw = form.UserPw.value;
	var nation = form.UserNation.value;
	
	alert("아이디는 :"+id+"이고 패스워드는 "+pw+"입니다. 출신국가는"+nation+"입니다.");
}
</script>
